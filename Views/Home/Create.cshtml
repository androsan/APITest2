@model CS_webapp.Models.SeznamUporabnikov

<form method="post" asp-action="Create">
    
     <div class="border p-3">
         <div asp-validation-summary="ModelOnly" class="text-danger"></div>
         
         <div class="form-group row">
             <h2 class="text-info pl-3">Nov uporabnik</h2>
         </div>

         <div class="row">
             <div class="col-8">
                 <div class="form-group row">
                     <div class="col-4">
                         <label asp-for="@Model.Ime"></label>
                     </div>
                     <div class="col-8">
                         <input asp-for="@Model.Ime" id="NA" class="form-control" />
                         <label>@TempData["user_taken_error"]</label>
                         <span asp-validation-for="@Model.Ime" class="text-danger"></span>
                     </div>
                 </div>

                 <div class="form-group row">
                     <div class="col-4">
                         <label asp-for="@Model.Priimek"></label>
                     </div>
                     <div class="col-8">
                         <input asp-for="@Model.Priimek" id="NA" class="form-control" />
                         <label>@TempData["user_taken_error"]</label>
                         <span asp-validation-for="@Model.Priimek" class="text-danger"></span>
                     </div>
                 </div>

                 <div class="form-group row">
                     <div class="col-4">
                         <label asp-for="@Model.Email"></label>
                     </div>
                     <div class="col-8">
                         <input asp-for="@Model.Email" id="NA" class="form-control" />
                         <label>@TempData["user_taken_error"]</label>
                         <span asp-validation-for="@Model.Email" class="text-danger"></span>
                     </div>
                 </div>

                 <div class="form-group row">
                     <div class="col-8 offset-4 row">
                         <div class="col">
                             <input type="submit" id="register" class="btn btn-info w-100" value="Vnesi" />
                         </div>
                         <div class="col">
                             <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-arrow-left"></i> &nbsp; Seznam uporabnikov</a>
                         </div>
                     </div>
                 </div>
             </div>
         </div>
     </div>

</form>

<p id="test"></p>

<script>
$("#register").click(function(){
  $("#test").value('test');
  $('#NA').value('');
  $('#DO').value('');
};
</script>

@section Scripts{
    @{ <partial name="_ValidationScriptsPartial" />}
} 